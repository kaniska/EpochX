<program> ::= <line> | <program> <line>

<line> ::= <assignment> <?vars=not-empty?> | <declaration>

<assignment> ::= @var-any = <expression> ;

<declaration> ::= <data-type> " " @var-decl = <literal> ;

<expression> ::= <literal> | @var-any

<data-type> ::= boolean | int

<literal> ::= <boolean-literal> | <int-literal>

<boolean-literal> ::= true | false

<int-literal> ::= @random-int